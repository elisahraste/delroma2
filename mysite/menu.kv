MDScreen:
    name: "menu"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "origen"
        MDLabel:
            text: "D E L R O M A"
            font_size: "28sp"
            pos_hint: {"center_y": .92}
            halign: "center"
            color: rgba(34,34,34,255)
        MDLabel:
            text: "Nuestros Productos"
            font_size: "14sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5,"center_y": .86}
            halign: "center"
            color: rgba(127,127,127,255)  
    MDGridLayout:
        cols: 1
        size_hint: .6, .6
        pos_hint: {"center_x": .5, "center_y": .5}
        MDTextButton:
            text: "Mesas"
            size_hint: .3, .25
            halign: "center"
            font_size: "13sp"
            color: rgba(105, 105, 105, 255)
            pos_hint: {"center_x": .95, "center_y": .65}
            on_release:
                root.manager.transition.direction ="right"
                root.manager.current = "mesas" 
        Image:
            source: "Mesas.png"
        MDTextButton:
            text: "Sillones"
            size_hint: .3, .25
            halign: "center"
            font_size: "13sp"
            color: rgba(105, 105, 105, 255)
            pos_hint: {"center_x": .95, "center_y": .45}
            on_release:
                root.manager.transition.direction ="right"
                root.manager.current = "sillones"
        Image:
            source: "Sillones.png" 
        MDTextButton:
            text: "Puff"
            size_hint: .3, .25
            halign: "center"
            font_size: "13sp"
            color: rgba(105, 105, 105, 255)
            pos_hint: {"center_x": .95, "center_y": .25}
            on_release:
                root.manager.transition.direction ="right"
                root.manager.current = "puff"                           
        Image:
            source: "Puff.png"  
            

            

        
    Button:
        text: "Comprar"
        size_hint: .66, .06
        font_size: "16sp"
        pos_hint: {"center_x": .5, "center_y": .12}
        background_color:0,0,0,0
        on_release:
            root.manager.transition.direction ="right"
            root.manager.current = "compra" 
        canvas.before:
            Color:
                rgb: rgba(52, 0, 231,255)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [5]                             
                       

    MDTextButton:
        text: "Salir"
        font_size: "12sp"
        pos_hint: {"center_x": .85, "center_y": .02}
        color: rgba(135, 135, 193, 255)
        on_press:
            app.clwindow()
               
